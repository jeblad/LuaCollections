{
	"name": "jeblad/LuaCollections",
	"type": "mediawiki-extension",
	"description": "Provides basic collections and a few utilities for modules in Mediawiki.",
	"keywords": [
		"wiki",
		"MediaWiki",
		"extension",
		"collections",
		"bag",
		"set",
		"stack",
		"queue"
	],
	"homepage": "https://www.mediawiki.org/wiki/Extension:LuaCollections",
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "John Erling Blad",
			"email": "jeblad@gmail.com",
			"role": "Developer"
		}
	],
	"support": {
		"wiki": "https://www.mediawiki.org/wiki/Extension:LuaCollections",
		"forum": "https://www.mediawiki.org/wiki/Extension_talk:LuaCollections",
		"source": "https://git.wikimedia.org/tree/mediawiki%2Fextensions%2Collections",
		"issues": "https://phabricator.wikimedia.org/project/view/2053/",
		"irc": "irc://irc.freenode.org/mediawiki"
	},
	"config": {
		"prepend-autoloader": false,
		"optimize-autoloader": true
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"mediawiki/mediawiki-codesniffer": "26.0.0",
		"phpunit/phpunit": "6.*",
		"phpmd/phpmd" : "@stable",
		"squizlabs/php_codesniffer": "3.*",
		"slevomat/coding-standard": "~4.5",
		"phpspec/prophecy": "~1.0",
		"liuggio/fastest": "~1.4",
		"jakub-onderka/php-console-highlighter": "@stable",
		"mediawiki/minus-x": "0.3.1",
		"mediawiki/mediawiki-phan-config": "0.6.1",
		"brianium/paratest": "^1.0"
	},
	"scripts": {
		"fix": [
			"phpcbf",
			"minus-x fix ."
		],
		"ldoc": [
			"ldoc includes/LuaLibrary/lua/ --testing --unqualified --template ./ --config ./config.ld"
		],
		"minify": [
			"find modules/images -type d -path minified -prune -o -type d -execdir svgo --pretty --indent=2 -i . -o ./minified \\;"
		],
		"unit": [
			"php ../../tests/phpunit/phpunit.php --wiki wiki --exclude-group LuaStandalone,Broken,Destructive,Database,Stub --group LuaCollections"
		],
		"unit-both": [
			"php ../../tests/phpunit/phpunit.php --wiki wiki --exclude-group Broken,Destructive,Database,Stub --group LuaCollections"
		],
		"unit-lua": [
			"php ../../tests/phpunit/phpunit.php --wiki wiki --exclude-group Broken,Destructive,Database,Stub --group Lua"
		],
		"codesize": [
			"phpmd ./includes/ text codesize",
			"phpmd ./tests/ text codesize"
		],
		"mess": [
			"phpmd ./includes/ text phpmd.xml",
			"phpmd ./tests/ text phpmd.xml"
		],
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s",
			"minus-x check ."
		],
		"export": [
			"php ../../maintenance/dumpBackup.php --current --pagelist=PAGELIST --output=file:pages.xml"
		],
		"import": [
			"php ../../maintenance/importDump.php pages.xml"
		]
	},
	"require": {
		"php": ">=5.6",
		"composer/installers": "~1.0",
		"ext-date": "*",
		"ext-xml": "*",
		"ext-Phar": "*"
	},
	"suggest": {
		"ext-apc": "Local data and opcode cache",
		"ext-tidy": "*",
		"ext-xdebug": "*"
	},
	"extra": {
		"phan-taint-check-plugin": "2.0.1"
	}
}
